wait()
{
    echo "> Waiting to continue"
    read
}

# Runs dmjd script to set up start times; passes all our arguments to it
echo "> Setting start time related status keys"
python $(dirname ${0})/dmjd.py "$@"

echo "> Enter a command to send to the control FIFOs:"

echo "Resetting control FIFOs"
cat /dev/null > /tmp/fake_gpu_control
cat /dev/null > /tmp/vegas_fits_control


cmd="START"
echo "Starting the scan"
echo "> Sending the command \"$cmd\" to fake_gpu"
echo "$cmd" > /tmp/fake_gpu_control

echo "> Sending the command \"$cmd\" to vegasFitsWriter"
echo "$cmd" > /tmp/vegas_fits_control

